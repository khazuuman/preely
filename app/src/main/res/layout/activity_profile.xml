<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/navigate_back"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/profile"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_profile_icon"
            android:padding="12dp"
            android:src="@drawable/ic_edit" />
    </LinearLayout>

    <!-- Profile Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_edge"
                android:contentDescription="@string/edit_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image" />

            <ImageView
                android:id="@+id/btnEditAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/rounded_edge"
                android:contentDescription="@string/edit_avatar"
                android:padding="4dp"
                android:src="@drawable/ic_edit"
                app:tint="@android:color/white" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/profile_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/profile_phone"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="#EEEEEE" />

    <!-- XÓA TOÀN BỘ PHẦN Settings List (ScrollView chứa các LinearLayout btnEditProfile, btnChangePassword, btnNotification, btnSavedServices, btnPrivacyPolicy, btnHelpCenter, btnLogout) -->

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/home_icon"
                android:src="@drawable/ic_account"
                app:tint="#CCCCCC" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/home"
                android:textColor="#CCCCCC"
                android:textSize="12sp"  android:layout_height="0dp" android:layout_width="0dp"/>
        </LinearLayout>

        <!-- Cart -->
        <LinearLayout
            android:id="@+id/btnCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/cart_icon"
                android:src="@drawable/ic_account"
                app:tint="#CCCCCC" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/cart"
                android:textColor="#CCCCCC"
                android:textSize="12sp"  android:layout_height="0dp" android:layout_width="0dp"/>
        </LinearLayout>

        <!-- Orders -->
        <LinearLayout
            android:id="@+id/btnOrders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/orders_icon"
                android:src="@drawable/ic_account"
                app:tint="#CCCCCC" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/orders"
                android:textColor="#CCCCCC"
                android:textSize="12sp"  android:layout_height="0dp" android:layout_width="0dp"/>
        </LinearLayout>

        <!-- Wallet -->
        <LinearLayout
            android:id="@+id/btnWallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/wallet_icon"
                android:src="@drawable/ic_account"
                app:tint="#CCCCCC" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/wallet"
                android:textColor="#CCCCCC"
                android:textSize="12sp" android:layout_height="0dp" android:layout_width="0dp" />
        </LinearLayout>

        <!-- Profile (Active) -->
        <LinearLayout
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/profile_icon"
                android:src="@drawable/ic_account"
                app:tint="@android:color/black" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="@string/profile"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" android:layout_height="0dp" android:layout_width="0dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout> 