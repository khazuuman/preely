<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_edge"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_image_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post ID"
                android:textSize="16sp"
                android:fontFamily="@font/zain_bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_image_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Link"
                android:textSize="14sp"
                android:fontFamily="@font/zain_regular"
                android:textColor="#666666"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_edit_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit image"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btn_delete_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/close_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete image"
                android:tint="#FF0000"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 